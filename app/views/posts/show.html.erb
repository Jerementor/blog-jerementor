<div class="content-box w-clearfix">
  <h2 class="blog-title"><%= @post.title %></h2>
  <div class="blog-subtitle"><%= @post.subtitle %></div>
  <div class="trix-content">  <%= @post.content.html_safe %></div>
  <%= link_to 'Back to home', root_path, :class=> 'jerementor-button w-button'%>
</div>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<% end %>